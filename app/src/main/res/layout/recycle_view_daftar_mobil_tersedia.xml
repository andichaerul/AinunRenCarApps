<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clickPilihMobil"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/pendukung_riple_effect"
    android:clickable="true"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgUnit"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:background="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hargaPerhari"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Loading..."
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/namaMitra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="12sp" />

            <TextView
                android:id="@+id/namaLengkapUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Loading..."
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/octicons"
                    android:gravity="bottom"
                    android:paddingBottom="7dp"
                    android:text="ï…¡"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/alamatMitra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="Loading..."
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>

